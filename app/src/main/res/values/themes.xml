<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuanLyPet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FFB300</item>
        <item name="colorPrimaryVariant">#FF9100</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#23E587</item>
        <item name="colorSecondaryVariant">#2CA7A6</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.QuanLyPet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QuanLyPet.NoTextButton">
        <item name="windowNoTitle">true</item>
        <item name="android:background">#F8DFBE</item>
        <item name="colorButtonNormal">#F8DFBE</item>
    </style>
</resources>