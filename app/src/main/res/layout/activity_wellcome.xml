<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="#FFF3E7"
    android:gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpr"
                android:background="@drawable/bg_wellcome"
                android:layout_width="match_parent"
                android:layout_height="600dp"/>
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/circle_indicator"
            android:layout_width="match_parent"
            app:ci_drawable="@drawable/indicator"
            app:ci_drawable_unselected="@drawable/indicator_null_select"
            android:layout_height="40dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/biorhyme_bold"
            android:text="Prev"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="start|top"
            android:textColor="#FB0F0F"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/biorhyme_bold"
            android:text="Next"
            android:textColor="#FB0F0F"
            android:textSize="18sp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:padding="10dp"
        android:layout_gravity="center|bottom">
        <Button
            android:id="@+id/btn_signin"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"
            android:text="Sign In"
            android:textStyle="bold"
            android:theme="@style/Theme.QuanLyPet.Button_1"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:text="Sign up"
            android:textStyle="bold"
            android:theme="@style/Theme.QuanLyPet.Button"
            android:background="@drawable/button"/>
    </LinearLayout>
</FrameLayout>