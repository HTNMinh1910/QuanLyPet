<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_tabarlayout">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/id_tollBar_addAnimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#03A9F4"
            app:menu="@menu/meu_add_animal"/>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:boxBackgroundColor="#ffff"
        app:startIconTintMode="screen"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/bg_coneradios"
        app:startIconTint="@color/cardview_shadow_end_color"
        app:startIconDrawable="@drawable/name_animal"
        app:hintEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:hint="name animal"
            android:id="@+id/ed_nameAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:id="@+id/liner_share_animal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_coneradios"
        android:paddingLeft="20dp"
        android:layout_marginTop="30dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_anh"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/camera" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_album"
            android:src="@drawable/photo_album"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center" />
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/bg_coneradios"
        app:boxBackgroundColor="#ffff"
        app:startIconTintMode="screen"
        app:startIconTint="@color/cardview_shadow_end_color"
        app:startIconDrawable="@drawable/age"
        app:hintEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:hint="age animal"
            android:id="@+id/ed_ageAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingBottom="1dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/bg_coneradios"
        app:boxBackgroundColor="#ffff"
        app:startIconTintMode="screen"
        app:startIconTint="@color/cardview_shadow_end_color"
        app:startIconDrawable="@drawable/species"
        app:hintEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:hint="species animal"
            android:id="@+id/ed_speciesAnimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="60dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_addAnimal"
            android:background="@drawable/button"
            android:theme="@style/Theme.QuanLyPet.Button_1"
            android:text="Add Animal"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:backgroundTint="#E11515"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>