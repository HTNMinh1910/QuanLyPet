<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:background="@color/black">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pet_shop"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/usersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:fontFamily="@font/biorhyme_bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_coneradios"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:id="@+id/ln_inforAccount">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/presonal_info"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/biorhyme_bold"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_coneradios"
    android:padding="5dp"
    android:visibility="gone"
    android:layout_marginTop="15dp"
    android:id="@+id/ln_animalManager">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/maneger_pet"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý thú cưng"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/biorhyme_bold"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_coneradios"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:id="@+id/ln_userManager">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/maneger_users"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý người dùng"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/biorhyme_bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_coneradios"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:id="@+id/ln_changePass">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/change"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thay đổi mật khẩu"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/biorhyme_bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_coneradios"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:id="@+id/ln_logOut">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logout"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/biorhyme_bold"/>
    </LinearLayout>
</LinearLayout>