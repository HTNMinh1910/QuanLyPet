<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contrain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDCA95"
    android:layout_margin="5dp">
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_petshop"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/pet_shop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_thongbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="THÔNG BÁO!!"
                android:textColor="#F13030"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_thongbaochitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Giờ Đặt Không Còn Trống"
                android:textColor="#F13030"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/sad"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

