<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">
        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/biorhyme_bold"
            android:text="Exit"
            android:layout_marginLeft="12dp"
            android:layout_weight="4"
            android:layout_gravity="center_vertical"
            android:textColor="#FF3D00"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/img_save"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:src="@drawable/save_file"/>
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/change"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/biorhyme_bold"
        android:text="Change password"
        android:layout_marginLeft="20dp"
        android:layout_gravity="start"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bioehyme_eegular"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:text="Enter your old password and new password"
        android:textColor="#696969"
        android:textSize="11sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:hintEnabled="true"
            app:startIconTintMode="screen"
            app:startIconTint="@color/cardview_shadow_end_color"
            app:startIconDrawable="@drawable/password"
            app:boxBackgroundColor="#ffff"
            android:layout_marginTop="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_nowPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter present password. . ."
                android:background="@drawable/bg_coneradios"
                android:inputType="textPassword"
                android:fontFamily="@font/biorhyme_bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:hintEnabled="true"
            app:startIconTintMode="screen"
            app:startIconTint="@color/cardview_shadow_end_color"
            app:startIconDrawable="@drawable/password"
            app:boxBackgroundColor="#ffff"
            android:layout_marginTop="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter new password . . ."
                android:background="@drawable/bg_coneradios"
                android:inputType="textPassword"
                android:fontFamily="@font/biorhyme_bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:hintEnabled="true"
            app:startIconTintMode="screen"
            app:startIconTint="@color/cardview_shadow_end_color"
            app:startIconDrawable="@drawable/password"
            app:boxBackgroundColor="#ffff"
            android:layout_marginTop="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newPassAganin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter password aganin. . ."
                android:background="@drawable/bg_coneradios"
                android:inputType="textPassword"
                android:fontFamily="@font/biorhyme_bold" />
        </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/tv_errors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/biorhyme_bold"
        android:text="Lỗi tài khoản"
        android:textColor="#FB0F0F"
        android:textSize="12sp" />
</LinearLayout>